# # # # # # # # # # # # # # # # # # #

# Model Add Screen

# # # # # # # # # # # # # # # # # # # #

<ModelAddScreen>:

	name: 'ModelAddScreen'
	PrimaryOverlay

<PrimaryOverlay>:

	ModelAddLayout

<ModelAddLayout>:

	orientation: 'vertical'
	spacing: 20

	BoxLayout:

		orientation: 'vertical'
		padding: 20, 20
		spacing: 10

		Label:
			id: title_label
			text: 'Model Add Screen'
			font_size: '30dp'
			# text_size: '15dp'

		TextInput:
			id: model_add_name
			text: 'Add your model name here'
			multiline: False

		Button:
			id: num_positions
			text: '# of positions'

		Button:
			id: add_model_confirm
			text: 'Add Model'
			font_size: '30dp'
			on_release: root.record_new_model()

		NavigationHUD

# # # # # # # # # # # # # # # # # # # #

# Machine Add Screen

# # # # # # # # # # # # # # # # # # # #

<MachineAddScreen>:

	name: 'MachineAddScreen'
	MachineAddLayout

<MachineAddLayout>:

	orientation: 'vertical'
	spacing: 20

	BoxLayout:

		orientation: 'vertical'
		padding: 20, 20
		spacing: 10

		Label:
			id: title_label
			text: 'Machine Add Screen'
			font_size: '30dp'
			# text_size: '15dp'

		TextInput:
			id: machine_add_name
			text: 'Add your machine name here'
			multiline: False

		Button:
			id: status
			text: 'Machine Status'

		Button:
			id: add_machine_confirm
			text: 'Add Model'
			font_size: '30dp'
			on_release: root.record_new_model()

	NavigationHUD


