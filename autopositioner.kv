<AddTeammatesScreen>:

	name: 'AddTeammatesScreen'
	
	AddTeammatesLayout

<AddTeammatesLayout>:
	
	orientation: 'vertical'
	
	padding: 20

	TextInput:
		
		id: teammate_name
		
		
	Button: 
		
		on_release: app.root.current = 'PositionerScreen'
		text: 'Position Em!'
		font_size: '30dp'
		
	Button: 
		
