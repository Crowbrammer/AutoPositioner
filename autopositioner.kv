# # # # # # # # # # # # # # # # # # # #

# Positioner Screen

# # # # # # # # # # # # # # # # # # # #

<PositionerScreen>:

	name: 'PositionerScreen'

	PositionerLayout

<PositionerLayout>:

	padding: 20, 20
	orientation: 'vertical'

	BoxLayout:

		Button:

			on_release: app.root.current = 'AddTeammatesScreen'
			text: 'Add Teammates!'
			font_size: '15dp'

		Button:

			on_release: app.root.current = 'UnusedMachineScreen'
			text: 'See Unused Machines!'
			font_size: '15dp'

		Button:

			on_release: app.root.current = 'ModelAddScreen'
			text: 'Add Models!'
			font_size: '15dp'

		Button:

			on_release: app.root.current = 'MachineAddScreen'
			text: 'Add Machines!'
			font_size: '15dp'

	Button:

		text: "Position 'Em!"
	Image:

		source: 'data/cat.jpg'

	NavigationHUD

<MmpModule>:

	size_hint: 1,1
	orientation: 'vertical'
	id: mmpm1

	BoxLayout: # This should probably be in Root

		id: bl_super

		height: '90dp'
		size_hint_y: None
		padding: 10, 10

		BoxLayout:

			orientation: 'vertical'
			Button:

				id: position1

			Button:

				id: position2

			Button:

				id: position3

		BoxLayout:

			id: bl2

			orientation: 'vertical'

			Button:

				id: machine_button

			Button:

				id: model_button




