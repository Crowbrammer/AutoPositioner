			orientation: 'vertical'
			Button: 
			
				id: position1
				
			Button:
			
				id: position2
			
			Button:
			
				id: position3
			
		BoxLayout:
		
			id: bl2
		
			orientation: 'vertical'
			
			Button:
			
				id: machine_button
				
			Button:
			
				id: model_button
				
			
			
	
